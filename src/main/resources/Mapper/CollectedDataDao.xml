<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ccy.dao.CollectedDataDao">

	<resultMap type="com.ccy.dto.CollectedValue" id="collectedValue">
		<result column="value" jdbcType="INTEGER" property="value" />
		<result column="collectedTime" jdbcType="DATE" property="collectedTime" />	
	</resultMap>

	<insert id="add">
		insert into ${tableName}
		values(0,now(),
			<foreach collection="values" item="value" separator=",">
				#{value}
			</foreach>
		)
	</insert>

	<select id="getAfter" resultMap="collectedValue">
		select ${fieldName} as value,time
		from 
			${tableName}
		where
			time>=#{beginTime}
		order by time
	</select>

	<select id="getBetween" resultMap="collectedValue">
		select ${fieldName} as value,time
		from 
			${tableName}
		where
			time>=#{beginTime} and 
			time<![CDATA[ <= ]]> #{endTime}
		order by time
	</select>

</mapper>